## pointGreyProperty.template

## Read whether the camera supports this feature
record(bi, "$(P)$(R)$(PROPERTY)Avail") {
  field(DTYP, "asynInt32")
  field(INP, "@asyn($(PORT) $(N))PG_PROP_AVAIL")
  field(ZNAM, "not available")
  field(ONAM, "available")
  field(SCAN, "I/O Intr")
}

